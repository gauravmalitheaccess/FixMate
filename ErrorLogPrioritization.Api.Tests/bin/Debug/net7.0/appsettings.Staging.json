{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "ErrorLogPrioritization.Api": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    }
  },
  "CopilotStudio": {
    "BaseUrl": "https://staging-copilot-studio-endpoint.com",
    "ApiUrl": "https://staging-copilot-studio-endpoint.com/api/analyze",
    "ApiKey": "staging-api-key-here",
    "TimeoutSeconds": 45,
    "MaxRetryAttempts": 3,
    "RetryDelaySeconds": 5
  },
  "FileStorage": {
    "LogsPath": "Data/Staging/Logs",
    "ExportsPath": "Data/Staging/Exports",
    "RetentionDays": 14,
    "MaxFileSizeMB": 75
  },
  "Scheduling": {
    "DailyAnalysisTime": "01:30:00",
    "RetryIntervalMinutes": 20,
    "MaxRetryAttempts": 3,
    "EnableScheduledAnalysis": true,
    "TimeZone": "UTC"
  },
  "Performance": {
    "MaxLogsPerRequest": 5000,
    "CacheExpirationSeconds": 180,
    "MaxConcurrentAnalysis": 3,
    "BatchSizeForProcessing": 75,
    "EnablePerformanceMonitoring": true
  }
}