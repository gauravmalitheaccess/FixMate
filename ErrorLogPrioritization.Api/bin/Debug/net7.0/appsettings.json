{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {CorrelationId} {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {CorrelationId} {Message:lj} {Properties:j}{NewLine}{Exception}",
          "retainedFileCountLimit": 30
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithCorrelationId"],
    "Properties": {
      "Application": "ErrorLogPrioritization.Api"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=.;Initial Catalog=ErrorLogPrioritization;Integrated Security=true;TrustServerCertificate=true"
  },
  "CopilotStudio": {
    "BaseUrl": "https://your-copilot-studio-endpoint.com",
    "ApiUrl": "https://your-copilot-studio-endpoint.com/api/analyze",
    "ApiKey": "your-api-key-here",
    "TimeoutSeconds": 30,
    "MaxRetryAttempts": 3,
    "RetryDelaySeconds": 5
  },
  "FileStorage": {
    "LogsPath": "Data/Logs",
    "ExportsPath": "Data/Exports",
    "RetentionDays": 30,
    "MaxFileSizeMB": 100,
    "CreateDirectoriesIfNotExist": true
  },
  "Scheduling": {
    "DailyAnalysisTime": "01:00:00",
    "RetryIntervalMinutes": 30,
    "MaxRetryAttempts": 3,
    "EnableScheduledAnalysis": true,
    "TimeZone": "UTC"
  },
  "Performance": {
    "MaxLogsPerRequest": 10000,
    "CacheExpirationSeconds": 300,
    "MaxConcurrentAnalysis": 5,
    "BatchSizeForProcessing": 100,
    "EnablePerformanceMonitoring": true
  }
}
