{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Warning",
      "ErrorLogPrioritization.Api": "Debug"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    }
  },
  "CopilotStudio": {
    "BaseUrl": "https://dev-copilot-studio-endpoint.com",
    "ApiUrl": "https://dev-copilot-studio-endpoint.com/api/analyze",
    "ApiKey": "dev-api-key-here",
    "TimeoutSeconds": 60,
    "MaxRetryAttempts": 2,
    "RetryDelaySeconds": 3
  },
  "FileStorage": {
    "LogsPath": "Data/Dev/Logs",
    "ExportsPath": "Data/Dev/Exports",
    "RetentionDays": 7,
    "MaxFileSizeMB": 50
  },
  "Scheduling": {
    "DailyAnalysisTime": "02:00:00",
    "RetryIntervalMinutes": 15,
    "MaxRetryAttempts": 2,
    "EnableScheduledAnalysis": true,
    "TimeZone": "UTC"
  },
  "Performance": {
    "MaxLogsPerRequest": 1000,
    "CacheExpirationSeconds": 60,
    "MaxConcurrentAnalysis": 2,
    "BatchSizeForProcessing": 50,
    "EnablePerformanceMonitoring": true
  }
}
