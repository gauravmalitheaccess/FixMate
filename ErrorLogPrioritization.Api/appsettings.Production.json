{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "ErrorLogPrioritization.Api": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning",
        "ErrorLogPrioritization.Api": "Information"
      }
    }
  },
  "CopilotStudio": {
    "BaseUrl": "https://prod-copilot-studio-endpoint.com",
    "ApiUrl": "https://prod-copilot-studio-endpoint.com/api/analyze",
    "ApiKey": "prod-api-key-here",
    "TimeoutSeconds": 30,
    "MaxRetryAttempts": 5,
    "RetryDelaySeconds": 10
  },
  "FileStorage": {
    "LogsPath": "/var/log/errorlog-prioritization/logs",
    "ExportsPath": "/var/log/errorlog-prioritization/exports",
    "RetentionDays": 90,
    "MaxFileSizeMB": 200
  },
  "Scheduling": {
    "DailyAnalysisTime": "01:00:00",
    "RetryIntervalMinutes": 30,
    "MaxRetryAttempts": 5,
    "EnableScheduledAnalysis": true,
    "TimeZone": "UTC"
  },
  "Performance": {
    "MaxLogsPerRequest": 10000,
    "CacheExpirationSeconds": 600,
    "MaxConcurrentAnalysis": 10,
    "BatchSizeForProcessing": 200,
    "EnablePerformanceMonitoring": true
  }
}